<div class="container">
  <% if @spreadsheets %>
    <%= form_with local: true, method: :get do |form| %>
      <div class="form-group">
        <label>
          Please choose a spreadsheet (
          <a href="https://docs.google.com/spreadsheets/d/1rNRNbwL3Kot0R34chl90LJURyesgMZhTtYVGW_iZlDU" target="_blank">template</a>
          )
        </label>
        <%= form.select :keyword_file_id, options_from_collection_for_select(@spreadsheets, :id, :name), {}, class: "form-control" %>
      </div>
      <div class="form-group">
        <label>Please choose a folder to store data</label>
        <%= form.select :result_folder_id, options_from_collection_for_select(@folders, :id, :name), {}, class: "form-control" %>
      </div>
      <div class="text-center">
        <%= form.submit "Automate", class: "btn btn-primary" %>
      </div>
    <% end %>
  <% else %>
    <%= link_to "Sign in to Google Drive", user_google_oauth2_omniauth_authorize_path(scope: "drive,spreadsheets"), class: "btn btn-lg btn-danger" %>
  <% end %>
</div>
